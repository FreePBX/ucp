SetEnv HTACCESS on

<Files ~ "file">
        ForceType application/x-httpd-php
</Files>

<FilesMatch "\..*$">
	<IfModule !authz_core_module>
	        #apache 2.2
	        Order allow,deny
	        Deny from all
	</IfModule>
	<IfModule authz_core_module>
		#apache 2.4
		Require all denied
	</IfModule>
</FilesMatch>

# Now allow /index.php as well as the various assets
#
<FilesMatch "(^$|index\.php|ajax\.php|\.(gif|GIF|jpg|jpeg|png|css|js|swf|txt|ico|ttf|svg|eot|woff|woff2|wav|mp3|aac|ogg|webm|less)$)">
	<IfModule authz_core_module>
		#apache 2.4 added mod_authz_core which changes the layout
		Require all granted
	</IfModule>

	<IfModule !authz_core_module>
		#apache 2.2
		Order allow,deny
		Allow from all
	</IfModule>
</FilesMatch>
